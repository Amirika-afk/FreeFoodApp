<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:FreeFoodApp.ViewModels"
             x:DataType="viewmodel:ProductDetailPageViewModel"
             x:Class="FreeFoodApp.Views.ProductDetailPage"
             Shell.NavBarIsVisible="false"
             Title="Product Detail Page">
    
    
    <VerticalStackLayout>
        <Frame BackgroundColor="Gainsboro" HeightRequest="80" Margin="30">
        <Label 
            Text="{Binding Text}"
            FontSize="20"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        </Frame>
        
        <Button Text="Go Back"
                Command="{Binding GoBackCommand}"/>
    </VerticalStackLayout>
</ContentPage>